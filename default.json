{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:best-practices",
		"schedule:monthly",
		"group:linters",
		":automergeLinters",
		":automergeTesters",
		"group:recommended",
		"group:monorepos"
	],
	"labels": ["dependencies"],
	"platformAutomerge": true,
	"packageRules": [
		{
			"matchPackagePatterns": ["^@sveltejs/"],
			"groupName": "SvelteKit monorepo"
		},
		{
			"matchPackageNames": [
				"svelte-check",
				"@playwright/test",
				"typescript",
				"autoprefixer",
				"vite",
				"rollup",
				"pnpm"
			],
			"automerge": true,
			"schedule": ["before 2am on monday"]
		},
		{
			"groupName": "sanity packages",
			"enabled": true,
			"matchUpdateTypes": [
				"digest",
				"patch",
				"minor",
				"major"
			],
			"matchPackageNames": [
				"/^@sanity//",
				"/sanity-plugin-*/",
				"sanity"
			]
		},
		{
			"extends": ["monorepo:sanity"],
			"matchUpdateTypes": [
				"digest",
				"patch",
				"minor"
			],
			"automerge": true
		},
		{
			"extends": [
				"monorepo:opentelemetry-rust"
			],
			"matchSourceUrls": ["https://github.com/tokio-rs/tracing-opentelemetry"],
			"groupName": "opentelemetry-rust monorepo and tracing-opentelemetry",
			"matchUpdateTypes": [
				"digest",
				"patch",
				"minor",
				"major"
			]
		}
	]
}

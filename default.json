{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:best-practices",
		"schedule:monthly",
		"group:linters",
		":automergeLinters",
		":automergeTesters",
		"group:recommended",
		":automergePatch",
		"group:monorepos",
		"customManagers:dockerfileVersions",
		"customManagers:githubActionsVersions"
	],
	"labels": ["dependencies"],
	"timezone": "Europe/London",
	"platformAutomerge": true,
	"minimumReleaseAge": "14 days",
	"packageRules": [
		{
			"matchPackagePatterns": ["^@sveltejs/"],
			"groupName": "SvelteKit monorepo"
		},
		{
			"matchPackageNames": [
				"svelte-check",
				"@playwright/test",
				"typescript",
				"autoprefixer",
				"vite",
				"rollup",
				"pnpm"
			],
			"automerge": true,
			"schedule": ["before 2am on monday"]
		},
		{
			"groupName": "sanity packages",
			"enabled": true,
			"matchUpdateTypes": [
				"digest",
				"patch",
				"minor",
				"major"
			],
			"matchPackageNames": [
				"/^@sanity//",
				"/sanity-plugin-*/",
				"sanity"
			]
		},
		{
			"extends": ["monorepo:sanity"],
			"matchUpdateTypes": [
				"digest",
				"patch",
				"minor"
			],
			"automerge": true
		},
		{
			"extends": [
				"monorepo:opentelemetry-rust"
			],
			"matchSourceUrls": ["https://github.com/tokio-rs/tracing-opentelemetry"],
			"groupName": "opentelemetry-rust monorepo and tracing-opentelemetry",
			"matchUpdateTypes": [
				"digest",
				"patch",
				"minor",
				"major"
			]
		},
		{
			"matchPackageNames": ["/^@samsveltecomponents//", "/^@samgreening//"], // Internal NPM packages
			"matchDatasource": ["npm"]
			"minimumReleaseAge": "0 days" // Disable minimumReleaseAge for these internal packages
    },
    {
      "matchDatasources": ["github-tags", "github-releases"], // Match GitHub dependencies
      "matchPackageNames": ["/^SG60//"], // My GitHub internal deps
      "minimumReleaseAge": "0 days" // Disable minimumReleaseAge for my internal GitHub dependencies
    },
		{
      "matchDatasources": ["git-refs"], // Match GitHub dependencies through git-refs
      "matchPackageNames": ["/^https://github.com/SG60//"], // My GitHub internal deps
      "minimumReleaseAge": "0 days" // Disable minimumReleaseAge for my internal GitHub dependencies
    }
	],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/kustomization.yaml/"
      ],
      "matchStrings": [
        "https://github.com/(?<depName>.*/.*?)/releases/download/(?<currentValue>.*?)/"
      ],
      "datasourceTemplate": "github-releases"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/kustomization.yaml/"
      ],
      "matchStrings": [
        "https://raw.githubusercontent.com/(?<depName>[^/]*/[^/]*)/(?<currentValue>.*?)/"
      ],
      "datasourceTemplate": "github-tags"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/kustomization.yaml/"
      ],
      "matchStrings": [
        "(?<packageName>\\S*\\..*\\/(?<depName>SG60\\/.*?))\\/\\/.*\\?ref=(?<currentDigest>\\S*)"
      ],
      "packageNameTemplate": "https://{{{packageName}}}",
      "currentValueTemplate": "main",
      "datasourceTemplate": "git-refs"
    }
  ],
  "hostRules": [
    {
      "matchHost": "lhr.ocir.io",
      "username": "lrdyqp2xtoja/github-app-renovate-container-registry-accesser",
      "password": "{{ secrets.ORACLE_OCIR_CONTAINER_REGISTRY_PASSWORD }}"
    }
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "cloudflare/cloudflared"
      ],
      "extends": [
        "schedule:weekly"
      ]
    }
  ]
}
